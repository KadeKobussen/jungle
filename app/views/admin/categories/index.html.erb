<section class="admin-categories-index">
  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default categories">
    <ul class="list-group">
      <% @categories.each do |category| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= category.name %>
          <%= link_to 'Delete', [:admin, category], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
        </li>
      <% end %>
    </ul>
  </div>
</section>
