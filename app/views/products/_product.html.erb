<article>
  <%= link_to product_path(product) do %>
    <% if product.image.present? %>
  <%= image_tag product.image.tiny.url %>
<% else %>
  <p>No image available</p>
<% end %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end%>
  <div>
  <% if product.quantity === 0 %>
  <h1 class = 'soldout'>Sold Out</h1>
  
    <%= button_to add_item_cart_path(product_id: product.id), class: 'disabled btn' ,
    method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %> 
    <% end %>
    <% else %>
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn' ,
    method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %> 
    <% end %>
  </div>
  <% end %>
</article>
